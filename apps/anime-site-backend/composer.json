{
  "name": "slim/slim-skeleton",
  "description": "A Slim Framework skeleton application for rapid development",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "homepage": "http://github.com/slimphp/Slim-Skeleton",
  "license": "MIT",
  "authors": [
    {
      "name": "Josh Lockhart",
      "email": "info@joshlockhart.com",
      "homepage": "http://www.joshlockhart.com/"
    },
    {
      "name": "Pierre Berube",
      "email": "pierre@lgse.com",
      "homepage": "http://www.lgse.com/"
    }
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "doctrine/dbal": "4.4.1",
    "doctrine/migrations": "^3.9",
    "doctrine/orm": "3.5.7",
    "monolog/monolog": "^3.0",
    "nyholm/psr7": "^1.8",
    "php-di/php-di": "^7.0",
    "ramsey/uuid": "^4.9",
    "ramsey/uuid-doctrine": "^2.1",
    "respect/validation": "^2.4",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.10",
    "spiral/roadrunner": "^2025.1",
    "spiral/roadrunner-http": "^3.5",
    "spiral/roadrunner-worker": "^3.6",
    "symfony/cache": "^7.2",
    "zircote/swagger-php": "^5.1"
  },
  "require-dev": {
    "deptrac/deptrac": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.75",
    "jangregor/phpstan-prophecy": "^1.0.0",
    "phpmd/phpmd": "^2.15",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5.26",
    "squizlabs/php_codesniffer": "^4.0",
    "swagger-api/swagger-ui": "^5.27"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    },
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "rr serve -c .rr.yaml",
    "check": [
      "@phpstan",
      "@phpcf",
      "@phpmd",
      "@deptrac",
      "@test"
    ],
    "phpstan": "./vendor/bin/phpstan",
    "phpcf": "./vendor/bin/php-cs-fixer fix ./",
    "phpmd": "./vendor/bin/phpmd ./ text phpmd.xml --suffixes php --exclude vendor,var,public,.github,.logs,migrations,generate-criteria-param-builder.php",
    "test": "phpunit"
  }
}
